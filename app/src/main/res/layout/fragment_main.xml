<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0E0E0"
    tools:context=".MainActivityFragment">

    <RelativeLayout
        android:id="@+id/secondRelative"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/globo_negro"
            android:layout_marginTop="5dp"
            android:src="@drawable/globo_negro"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_alignParentTop="true"
            android:layout_margin="3dp"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/video_ondemand"
                android:layout_gravity="center"
                android:src="@mipmap/ic_video_ondemand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"/>

            <TextView
                android:layout_gravity="center"
                android:text="Bienvenido"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="23sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView
                android:layout_gravity="center"
                android:text="¡Conéctate!"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"/>

            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/button_twitter"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@mipmap/ic_icono_twitter"
                    android:layout_marginRight="20dp"/>

                <ImageButton
                    android:id="@+id/button_facebook"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@mipmap/ic_icono_facebook"
                    android:layout_marginRight="20dp"/>

                <ImageButton
                    android:id="@+id/button_google"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@mipmap/ic_icono_google"
                    android:layout_marginRight="20dp"/>

                <ImageButton
                    android:id="@+id/button_mail"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@mipmap/ic_icono_mail"/>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>




</RelativeLayout>
